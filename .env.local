# 🧠 MongoDB Connection
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/dealhunt

# 🔐 NextAuth Secret Key (use any strong random key)
NEXTAUTH_SECRET=super_secret_random_key_here

# 🌐 NextAuth URLs (optional but recommended for Render/Vercel)
NEXTAUTH_URL=https://your-site-domain.com
NEXTAUTH_URL_INTERNAL=http://localhost:3000

# 🔑 Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# 🔵 Facebook OAuth
FACEBOOK_CLIENT_ID=your_facebook_client_id
FACEBOOK_CLIENT_SECRET=your_facebook_client_secret
